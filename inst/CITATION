year <- sub("-.*", "", meta$Date)
vers <- paste("R package version", meta$Version)

citHeader("To cite the imputeR package, use:")

bibentry(bibtype = "Manual",
  title = "imputeR: A General Imputation Framework in R",
  author = personList(as.person("Steffen Moritz"), as.person("Lingbing Feng"), as.person("Gen Nowak"), as.person("Alan. H. Welsh"), as.person("Terry. J. O'Neill")),
  year = year,
  note = vers,
  url = "https://CRAN.R-project.org/package=imputeR")